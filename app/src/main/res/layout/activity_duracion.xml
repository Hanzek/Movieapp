<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mi duracion ideal es de"
        android:layout_marginBottom="50dp"
        android:textColor="#191717"
        android:fontFamily="@font/dmsansbold"
        android:textSize="20sp"
        />



    <CheckBox
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:id="@+id/treintamin"
        android:text="30 minutos o menos"
        android:padding="1dp"
        android:layout_margin="5dp"
        android:button="@null"
        android:drawableRight="@drawable/checkbox"

        >

    </CheckBox>

    <View
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:background="#D3D0D0">

    </View>


    <CheckBox
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:id="@+id/treintaysesenta"
        android:text="Entre 30 y 60 minutos"
        android:padding="1dp"
        android:layout_margin="5dp"
        android:button="@null"
        android:drawableRight="@drawable/checkbox"

        >

    </CheckBox>

    <View
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:background="#D3D0D0">

    </View>


    <CheckBox
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:id="@+id/mayora60"
        android:text="Superior a 60 minutos"
        android:padding="1dp"
        android:layout_margin="5dp"
        android:button="@null"
        android:drawableRight="@drawable/checkbox"

        >

    </CheckBox>

    <View
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:background="#D3D0D0">

    </View>
    <CheckBox
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:id="@+id/medaigual"
        android:text="Me da igual"
        android:padding="1dp"
        android:layout_margin="5dp"
        android:button="@null"
        android:drawableRight="@drawable/checkbox"

        >

    </CheckBox>

    <View
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:background="#D3D0D0">

    </View>

    <Button
        android:layout_width="217dp"
        android:layout_height="36dp"
        android:layout_marginTop="30dp"
        android:text="Continuar"
        android:onClick="continuar"
        android:fontFamily="@font/dmsansbold"
        android:textColor="#EAE1E1"
        android:background="@drawable/registrarsebtn">

    </Button>



</LinearLayout>